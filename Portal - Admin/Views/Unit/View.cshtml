@model ResComm.Web.Models.Unit
@{
    ViewBag.Title = "Unit Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { Details }
@section ContentHeader{
    <div class="pull-right">
        <a href="@Url.Action("List", "Unit")" class="btn btn-primary inline"><i class="fa fa-arrow-left"></i> Back</a>
        <a href="@Url.Action("Edit", "Unit", new { Id = Model.UnitId })" class="btn btn-primary inline"><i class="fa fa-edit"></i> Edit</a>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Unit Information</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitType.CategoryName)
                    <div>
                        @Model.UnitType.CategoryName
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitType.CategoryValue)
                    <div>
                        @Model.UnitType.CategoryValue
                    </div>
                </div>
                @*@if (Model.UnitType.CategoryName == UNIT_TYPE_CATEGORY.Block.ToString())
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitType.Floor)
                        <div>
                            @Model.UnitType.Floor
                        </div>
                    </div>
                }*@
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitNo)
                    <div>
                        @Model.UnitNo
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!--/.col (left) -->
</div><!-- /.row -->
