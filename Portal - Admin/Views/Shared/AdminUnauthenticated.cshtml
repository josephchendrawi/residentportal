
@{
    ViewBag.Title = "Unauthenticated";
    Layout = "~/Views/Shared/_Layout_Empty.cshtml";
}

<script type="text/javascript">
    @if(ViewBag.ReturnURL != null)
    {   <text>
        window.location.href = "@Url.Action("Login", "Home")?ReturnURL=@ViewBag.ReturnURL";
        parent.window.location = "@Url.Action("Login", "Home")?ReturnURL=@ViewBag.ReturnURL";
        </text>
    }
    else
    {
        <text>
        window.location.href = "@Url.Action("Login", "Home")";
        parent.window.location = "@Url.Action("Login", "Home")";
        </text>
    }
</script>
