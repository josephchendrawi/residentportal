@model ResComm.Web.Models.FacilitySlot
@{
    ViewBag.Title = "Edit Facility Slot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { Edit }
@section ContentHeader{
    <script>
        $(function () {
            $('#main_title').html("Facility Slot");
        });
    </script>

}

<div class="row">
    @using (Html.BeginForm("EditSlot", "Facility", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.FacilityId)
        @Html.HiddenFor(m => m.FacilitySlotId)

        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Time Slot</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.StartTime)
                        <div class="form-group">
                            <div class='input-group date time-picker'>
                                @Html.TextBoxFor(m => m.StartTime, new { @class = "form-control", @placeholder = "24:00" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.EndTime)
                        <div class="form-group">
                            <div class='input-group date time-picker'>
                                @Html.TextBoxFor(m => m.EndTime, new { @class = "form-control", @placeholder = "24:00" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Slot)
                        @Html.TextBoxFor(m => m.Slot, new { @class = "form-control" })
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div><!-- /.box -->

        </div><!--/.col (left) -->
    }
</div><!-- /.row -->

<!-- datetimepicker -->
<link href="@Url.Content("~/Content/bootstrap-datetimepicker/bootstrap-datetimepicker.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-datetimepicker/moment.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $('.time-picker').datetimepicker({
            format: 'HH:mm'
        });
    });
</script>