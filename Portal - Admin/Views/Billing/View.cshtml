@model ResComm.Web.Models.Billing
@{
    ViewBag.Title = "Billing Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { Details }
@section ContentHeader{
    <script>
            $(function () {
                $('#main_title').html("Online Bill Payment");
            });
    </script>

    <div class="pull-right">
        <a href="@Url.Action("List", "Billing")" class="btn btn-primary inline"><i class="fa fa-arrow-left"></i> Back</a>
        <a href="@Url.Action("Edit", "Billing", new { Id = Model.BillingId })" class="btn btn-primary inline"><i class="fa fa-edit"></i> Edit</a>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Billing Information</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="form-group">
                    <label>Unit</label>
                    <div class="">@Model.UnitName</div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.InvoiceNo)
                    <div>
                        @Model.InvoiceNo
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CreatedDate)
                    <div>
                        RM @Model.CreatedDateText
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount)
                    <div>
                        RM @Model.Amount
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BillingDate)
                    <div>
                        @Model.BillingDateText
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DueDate)
                    <div>
                        @Model.DueDateText
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Reference)
                    <div>
                        @Model.Reference
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Status)
                    <div>
                        @Model.Status
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!--/.col (left) -->  
        
    <div class="col-md-4">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Document</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="files-info" class="tabs-infobox">
                            <div class="img-wrapper">
                                @if (!String.IsNullOrWhiteSpace(Model.FileName)) { 
                                <a href="@Constant.UploadPath@Model.FileName" class="fancybox" title="@Model.FileName">
                                    <div class="img-box-round">
                                        @if (Model.FileName.ToLower().Contains(".jpg") || Model.FileName.ToLower().Contains(".jpeg") || Model.FileName.ToLower().Contains(".png") || Model.FileName.ToLower().Contains(".gif"))
                                        { 
                                            <img src="@Constant.UploadPath@Model.FileName" class="img-responsive-flex img-center" />
                                        }
                                        else
                                        {
                                            <div class='img-center fa fa-file-text'></div>
                                        }
                                    </div>
                                </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div><!-- /.row -->
