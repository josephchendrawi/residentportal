@model ResComm.Web.Models.Document
@{
    ViewBag.Title = "Document Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { Details }
@section ContentHeader{
    <div class="pull-right">
        <a href="@Url.Action("List", "Documents")" class="btn btn-primary inline"><i class="fa fa-arrow-left"></i> Back</a>
        <a href="@Url.Action("Edit", "Documents", new { Id = Model.AccountNoteId })" class="btn btn-primary inline"><i class="fa fa-edit"></i> Edit</a>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Document Information</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Name)
                        <div>
                            @Model.Name
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.LastUpdatedText)
                        <div>
                            @Model.LastUpdatedText
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content)
                    <div style="border: solid thin #eeeeee; padding: 10px;">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!--/.col (left) -->
</div><!-- /.row -->
